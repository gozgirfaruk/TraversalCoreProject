@model Destination
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<!doctype html>
<html lang="zxx">



<body>
  
    <!-- about breadcrumb -->
    <section class="w3l-about-breadcrumb text-left">
        <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
            <div class="container">
                <h2 class="title">Lokasyon Hakkında</h2>
                <ul class="breadcrumbs-custom-path mt-2">
                    <li><a href="#url">Ana Sayfa</a></li>
                  
                </ul>
            </div>
        </div>
    </section>
    <!-- //about breadcrumb -->
    <!--/blog-->
    <div class="py-5 w3l-homeblock1 text-center">
        <div class="container mt-md-3">
            <h3 class="blog-desc-big text-center mb-4">
              Tatile Çıkmadan Önce Bilmekte Fayda Var
            </h3>
            <div class="blog-post-align">
                <div class="blog-post-img">
                    <a href="#"><img src="assets/images/c1.jpg" alt="" class="rounded-circle img-fluid" /></a>
                </div>
                <div class="blog-post-info">
                    <div class="author align-items-center mb-1">
                        <a href="#">Ömer Faruk Gözegir</a>#<a href="#url">Tatil Rehberi</a>
                    </div>
                    <ul class="blog-meta">
                        <li class="meta-item blog-lesson">
                            <span class="meta-value"> Okuma Süresi </span>
                        </li>
                        <li class="meta-item blog-students">
                            <span class="meta-value"> 3 Dakika</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <section class="blog-post-main w3l-homeblock1">
        <!--/blog-post-->
        <div class="blog-content-inf pb-5" >
            <div class="container pb-lg-4">
                <div class="single-post-image">
                    <div class="post-content">
                        <img src="@ViewBag.c" class="radius-image img-fluid mb-5" alt="" />
                    </div>
                </div>
                <div class="single-post-content">
                   
                    @await Component.InvokeAsync("_DestinationDetailsPartialComponent" , new {id = ViewBag.ID})

                    @await Component.InvokeAsync("_DestinationCommentListPartial" , new {id =ViewBag.ID})

                   @await Html.PartialAsync("/Views/ReComment/AddComment.cshtml" , new {id=ViewBag.ID})
                
                </div>
            </div>
          
            </div>
    </section>


</body>

</html>