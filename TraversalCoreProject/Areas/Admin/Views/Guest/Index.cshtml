@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
    int count = 0;
}

<div class="card">
    <h5 class="card-header">Misafirlerimiz</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-borderless">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Profil</th>
                    <th>İsim Soyisim</th>
                    <th>Mail</th>
                    <th>Telefon</th>
                    <th>Durum</th>
                    <th>Düzenle</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    count++;
                    <tr>
                        <td>@count</td>
                        <td><img src="@item.ImageUrl" style="height:50px; width:50px; border-radius:5px;"/></td>
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td><span class="badge bg-label-primary me-1">Üye</span></td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Güncelle</a>
                                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Sil</a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
                
            </tbody>
        </table>
        <a href="/Register/Index/" class="btn btn-outline-primary btn-round">Yeni Üye Ekle</a>
    </div>
</div>

