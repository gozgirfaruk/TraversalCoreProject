@model List<AppRole>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
    int count = 0;
}
@if (Model.Count > 0)
{
    <div class="card">
        <h5 class="card-header">Rol Tablosu</h5>
        <div class="table-responsive text-nowrap">

            <table class="table table-borderless">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                        <th>Rol Güncelle</th>
                        <th>Rol Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>

                            <th>@count</th>
                            <td>@item.Name</td>
                            <td><a href="/Admin/Roles/UpdateRole/@item.ıd" class="btn btn-outline-dark btn-rounded">Güncelle</a></td>
                            <td><a href="/Admin/Roles/DeleteRole/@item.Id" class="btn btn-outline-warning btn-rounded">Sil</a></td>
                        </tr>
                    }

                </tbody>
            </table>
            <a href="/Admin/Roles/CreateRole" class="btn btn-outline-info btn-rounded">Yeni Rol Ekle</a>


        </div>
    </div>
}
else
{
    <div class="alert alert-success">
        <span>Herhangi Bir Rol Bulunamadı</span>
    </div>
}