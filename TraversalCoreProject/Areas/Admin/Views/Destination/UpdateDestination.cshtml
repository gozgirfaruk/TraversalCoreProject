@model Destination
@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminUILayout.cshtml";
}

<div class="row">
    <div class="col-xl">
        <div class="card mb-4">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Rota Bilgileri Güncelle</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname">Şehir</label>
                        <div class="input-group input-group-merge">
                          
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-plane-departure"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="City" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname">Tatil Gün Sayısı</label>
                        <div class="input-group input-group-merge">
                          
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-hourglass-clock"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="DayNight" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname">Kişi Başı Ücret </label>
                        <div class="input-group input-group-merge">
                           
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-money-bill-wave"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="Price" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname">Toplam Koltuk Sayısı </label>
                        <div class="input-group input-group-merge">
                           
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-seat-airline"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="Capacity" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname">Şehir Kapak Fotografı </label>
                        <div class="input-group input-group-merge">
                           
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-image"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="ImageUrl" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname">Şehir İlan Fotografı </label>
                        <div class="input-group input-group-merge">
                           
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-image"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="CoverImage1" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname"> Şehir Afiş Fotografı</label>
                        <div class="input-group input-group-merge">
                           
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-image"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="CoverImage2" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname">Açıklama Tanıtım </label>
                        <div class="input-group input-group-merge">
                           
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-subtitles"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="Description" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname">Şehir Hakkında </label>
                        <div class="input-group input-group-merge">
                           
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-subtitles"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="Details1" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="basic-icon-default-fullname">Şehir Detay </label>
                        <div class="input-group input-group-merge">
                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                <i class="fa-light fa-subtitles"></i>
                            </span>
                            <input type="text" class="form-control" asp-for="Details2" />
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>