@model UserEditViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberUILayout.cshtml";
}


<h2>Profil Düzenleme Sayfası</h2>
<form method="post" enctype="multipart/form-data">
    
    <label>Adınız</label>
    <input type="text" asp-for="FirstName" class="form-control" />
    <br />

    <label>Soyadınız</label>
    <input type="text" asp-for="LastName" class="form-control" />
    <br />

    <label>Mail Adresiniz</label>
    <input type="text" asp-for="Mail" class="form-control" />
    <br />

     <label>Şifre</label>
    <input type="text" asp-for="Password" class="form-control" />
    <br />
    <label>Şifre Tekrar</label>
    <input type="text" asp-for="ConfirmPassword" class="form-control" />
    <br />

    <div class="form-group">
        <label>Resim Seçiniz</label>
        <input type="file" asp-for="Image" />
        <br />
    </div>


    <button class="btn btn-info">Güncelle</button>
</form>

